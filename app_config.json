{
  "description": "A extended example app that shows how to use MentraOS.",
  "permissions": [
    {
      "type": "MICROPHONE",
      "description": "To show transcriptions"
    }
  ],
  "settings": [
    {
      "type": "toggle",
      "key": "show_live_transcription",
      "label": "Show live transcription",
      "defaultValue": true
    },
    {
      "type": "toggle",
      "key": "audio_recording",
      "label": "Record Microphone Audio",
      "defaultValue": false
    }
  ],
  "tools": [
    {
      "id": "my_tool_name",
      "description": "This is a tool that does something.",
      "activationPhrases": [
        "my tool name",
        "use my tool"
      ],
      "parameters": {}
    },
    {
      "id": "start_recording",
      "description": "Start recording microphone audio",
      "activationPhrases": [
        "start recording"
      ],
      "parameters": {}
    },
    {
      "id": "stop_recording",
      "description": "Stop recording microphone audio",
      "activationPhrases": [
        "stop recording"
      ],
      "parameters": {}
    },
    {
      "id": "android_control",
      "description": "Cycle or select the currently highlighted option (used by Android companion app)",
      "activationPhrases": [],
      "parameters": {
        "action": {
          "type": "string",
          "description": "cycle or select"
        },
        "direction": {
          "type": "string",
          "description": "up or down (only for cycle)"
        }
      }
    }
  ]
}
