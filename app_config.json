{
  "description": "A extended example app that shows how to use MentraOS.",
  "permissions": [
    {
      "type": "MICROPHONE",
      "description": "To show transcriptions"
    }
  ],
  "settings": [
    {
      "type": "toggle",
      "key": "show_live_transcription",
      "label": "Show live transcription",
      "defaultValue": true
    },
    {
      "type": "toggle",
      "key": "audio_recording",
      "label": "Record Microphone Audio",
      "defaultValue": false
    }
  ],
  "tools": [
    {
      "id": "my_tool_name",
      "description": "This is a tool that does something.",
      "activationPhrases": [
        "my tool name",
        "use my tool"
      ],
      "parameters": {}
    },
    {
      "id": "start_recording",
      "description": "Start recording microphone audio",
      "activationPhrases": [
        "start recording"
      ],
      "parameters": {}
    },
    {
      "id": "stop_recording",
      "description": "Stop recording microphone audio",
      "activationPhrases": [
        "stop recording"
      ],
      "parameters": {}
    },
    {
      "id": "android_control",
      "description": "Cycle, select, number, or language change (used by Android companion app)",
      "activationPhrases": [],
      "parameters": {
        "action": {
          "type": "string",
          "description": "cycle, select, number, or language"
        },
        "direction": {
          "type": "string",
          "description": "up or down (only for cycle)"
        },
        "number": {
          "type": "number",
          "description": "The 1-based index of the option to select (only for number action)"
        },
        "language": {
          "type": "string",
          "description": "Language name (only for language action)"
        },
        "code": {
          "type": "string",
          "description": "Language code (only for language action)"
        }
      }
    },
    {
      "id": "set_language",
      "description": "Set the target language for transcription and translation",
      "activationPhrases": [
        "set language to",
        "change language to"
      ],
      "parameters": {
        "language": {
          "type": "string",
          "description": "The name of the language (e.g., Spanish, German)"
        },
        "code": {
          "type": "string",
          "description": "The ISO 639-1 language code (e.g., es, de)"
        }
      }
    }
  ]
}
